{
    "build": {
        "beforeDevCommand": "",
        "beforeBuildCommand": "",
        "devPath": "../release",
        "distDir": "../release",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "timelinify",
        "version": "1.1.3"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "fs": {
                "all": true,
                "scope": ["**", "$HOME/**"]
            },
            "shell": {
                "all": false,
                "open": true
            },
            "dialog": {
                "message": true
            },
            "process": {
                "exit": true
            },
            "window": {
                "setSize": true
            },
            "path": {
                "all": true
            },
            "protocol": {
                "asset": true,
                "assetScope": ["$HOME/**"]
            }
        },
        "bundle": {
            "active": true,
            "targets": "msi",
            "identifier": "com.graffitt.timelinify",
            "shortDescription": "timelinify",
            "longDescription": "timelinify",
            "publisher": "graffitt",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": "asset: https://asset.localhost"
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "timelinify",
                "width": 774,
                "height": 600,
                "center": true
            }
        ]
    }
}