@media (prefers-color-scheme: light)
    :root
        color-scheme light
        color color-1-light

:root
    color-scheme dark
    background-color rgb(30 30 30)
    font-synthesis none
    text-rendering optimizeLegibility
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    -webkit-text-size-adjust 100%

*
    margin 0
    padding 0

    font-family Inter, Segoe UI, sans-serif
    font-size 14px
    /* line-height 24px */
    font-weight 400
    color color-1

    border-radius 0
    border-width 0
    border-style solid

@media (prefers-reduced-motion: reduce)
    *
        transition none
b
    font-weight 700 !important
    letter-spacing 0.5px

br
    pointer-events none
    user-select none

button
    border-radius border-radius-5
    border 1px solid transparent
    padding 5px 10px
    color color-1
    background-color rgb(45 45 45)
    transition border-color 0.2s
    box-shadow 0 1px 2px rgba(0, 0, 0, .07), 0 2px 4px rgba(0, 0, 0, .07), 0 4px 8px rgba(0, 0, 0, .07), 0 8px 16px rgba(0, 0, 0, .07), 0 16px 32px rgba(0, 0, 0, .07), 0 32px 64px rgba(0, 0, 0, .07)
    cursor pointer
    user-select none
    &:hover
        border-color #396cd8

    &:active
        border-color #396cd8
        background-color #0f0f0f69

#tabs_container
    width 100%
    height auto

#tool_bar
    display flex
    flex-direction row
    flex-wrap wrap
    align-items center
    gap 10px
    box-sizing border-box
    margin-top 10px
    padding 0 10px
    width 100%

    & button
        width fit-content
        height 30px


#sort_box
    flex-shrink 0
    background red

#search_box
    flex-shrink 0
    box-sizing border-box
    margin-left auto
    padding 0 6px
    width 200px
    height 30px
    background rgb(45 45 45)
    border-width 0
    border-radius 5px
    font-size 13px
    text-align center

#apps_container
    // background red !important
    display flex
    flex-direction row
    flex-wrap wrap
    align-content flex-start
    gap 10px

    margin-top 10px
    padding 0 10px 10px

    height calc(100% - 60px)
    overflow scroll

    &::-webkit-scrollbar
        width 0
        height 0

#version
    position absolute
    padding 10px

    bottom 0
    left 0

    opacity .1
    font-family Roboto_Mono
    font-size 12px
    user-select none
    pointer-events none
    z-index 1000

.tab
    position absolute
    box-sizing border-box
    width 100%
    height 100%

.app_card
    // background darkcyan !important
    display flex
    // flex-direction column
    flex-direction row
    flex-wrap nowrap
    align-items center
    gap 10px
    padding 10px
    box-sizing border-box
    // width 150px
    // height 200px
    width 372px
    height 100px
    min-width 372px
    background rgb(35 35 35)
    border-radius border-radius-10
    box-shadow 0 1px 2px rgba(0 0 0 .07), 0 2px 4px rgba(0 0 0 .07), 0 4px 8px rgba(0 0 0 .07), 0 8px 16px rgba(0 0 0 .07), 0 16px 32px rgba(0 0 0 .07), 0 32px 64px rgba(0 0 0 .07)
    user-select none

    &.service
        justify-content center
        align-items center
        font-size 20px
        font-weight 600

.app_inner_container
    display flex
    flex-direction column
    flex-wrap nowrap
    align-items center
    justify-content center

.app_icon_container
    min-width 80px
    min-height 80px

    max-width 80px
    max-height 80px

.app_icon
    aspect-ratio 1
    width 80px
    // height 80px
    border-radius border-radius-5
    border-width 0
    // background-color rebeccapurple !important
    z-index 10

.app_text_container
    align-items flex-start
    margin-right auto
    gap 4px

.app_title
    display -webkit-box
    -webkit-box-orient vertical
    -webkit-line-clamp 2
    max-width 130px
    font-size 16px
    letter-spacing 0.2px
    // text-align center
    // text-overflow ellipsis
    overflow hidden

.app_usage_time
    font-family Roboto_Mono, SF Mono, monospace
    font-weight 500
    font-size 13px
    letter-spacing -0.2px
    color color-2

.app_buttons_container
    flex-shrink 0
    justify-content space-between
    // margin-left auto
    height 100%

.app_run
    // margin-top auto
    width 100%
    height 38px

.require_admin
    background-color rgb(65, 60, 38) !important
    color rgb(253, 243, 170) !important
    cursor help
    border-color transparent !important

.app_delete
    &:hover
        border-color red

    &:active
        border-color red

.app_buttons_sub_container button
    padding 5px
    aspect-ratio 1
    width 38px
    height 38px
    font-size 16px